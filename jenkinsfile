pipeline{
    agent{
        label "docker"
    }
    stages{
        stage("A"){
            steps{
                echo "========executing A========"
            }
            post{
                always{
                    echo "========always========"
                }
                success{
                    echo "========A executed successfully========"
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }
        stage('Run Docker PS') {
            steps {
                script {
                    // Ejecuta el comando 'docker ps'
                    def dockerPsOutput = sh(script: 'docker ps', returnStdout: true).trim()

                    // Imprime la salida de 'docker ps'
                    echo "Output of 'docker ps':"
                    echo dockerPsOutput
                }
            }
        }

        stage('Access Repository Resources') {
            steps {
                script {
                    // Accede al directorio de trabajo (workspace)
                    def workspaceDir = env.WORKSPACE
                    echo "Workspace Directory: ${workspaceDir}"

                    // Puedes realizar operaciones en el directorio de trabajo
                    // Por ejemplo, listar los archivos/directorios en el repositorio
                    sh "ls -la ${workspaceDir}"
                }
            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}