pipeline{
    agent{
        label "docker"
    }
    stages{
        stage('Run Docker PS') {
            steps {
                script {
                    // Ejecuta el comando 'docker ps'
                    def dockerPsOutput = sh(script: 'docker ps', returnStdout: true).trim()

                    // Imprime la salida de 'docker ps'
                    echo "Output of 'docker ps':"
                    echo dockerPsOutput
                }
            }
        }


        stage('Build Project') {
            steps {
                script {
                   
                    dir(env.WORKSPACE) {
                        // Ejecuta la tarea del Makefile
                        sh 'make build'
                    }
                }
            }
        }

        stage('Run Project') {
            steps {
                script {
                   
                    dir(env.WORKSPACE) {
                        // Ejecuta la tarea del Makefile
                        sh 'make run'
                    }
                }
            }
        }
        stage('Test Unit Project') {
            steps {
                script {
                   
                    dir(env.WORKSPACE) {
                        // Ejecuta la tarea del Makefile
                        sh 'make test-unit'
                    }
                }
            }
        }
        stage('Test Api Project') {
            steps {
                script {
                   
                    dir(env.WORKSPACE) {
                        // Ejecuta la tarea del Makefile
                        sh 'make test-api'
                    }
                }
            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}