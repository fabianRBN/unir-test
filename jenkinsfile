pipeline{
    agent{
        label "docker"
    }
    stages{
        stage('Run Docker PS') {
            steps {
                script {
                    // Ejecuta el comando 'docker ps'
                    def dockerPsOutput = sh(script: 'docker ps', returnStdout: true).trim()

                    // Imprime la salida de 'docker ps'
                    echo "Output of 'docker ps':"
                    echo dockerPsOutput
                }
            }
        }


        stage('Build Project') {
            steps {
                script {
                   
                    dir(env.WORKSPACE) {
                        // Ejecuta la tarea del Makefile
                        sh 'make build'
                    }
                }
            }
        }

        stage('Test Unit Project') {
            steps {
                script {
                   
                    dir(env.WORKSPACE) {
                        // Ejecuta la tarea del Makefile
                        sh 'make test-unit'
                    }
                }
            }
        }
        stage('Test Api Project') {
            steps {
                script {
                   
                    dir(env.WORKSPACE) {
                        // Ejecuta la tarea del Makefile
                        sh 'make test-api'
                    }
                }
            }
        }
         stage('Unit tests') {
            steps {
                sh 'make test-unit'
                archiveArtifacts artifacts: 'results/*.xml'
            }
        }

        
       
    }
    post{
        always{
            echo "========always========"
            junit 'results/*_result.xml'
        }
        success{
            echo "========pipeline executed successfully ========"
            mail bcc: '', body: 'Success Build unir', cc: '', from: '', replyTo: '', subject: 'Notification Jenkins', to: 'fabianRBN_95@hotmail.com'
        }
        failure{
            echo "========pipeline execution failed========"
            mail bcc: '', body: 'Faild Build unir', cc: '', from: '', replyTo: '', subject: 'Notification Jenkins', to: 'fabianRBN_95@hotmail.com'

        }
    }
}